  script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
  script(src="https://code.jquery.com/jquery-3.1.1.min.js")
  script(type='text/javascript').
    $(document).ready(function() {
      let query = '';
      $(".collection-item").click(function(){
        query += $(this).text() + ', '; 
        $('#searchquery').val(query);
      });

    });
  script(type='text/javascript').
    let counter = 0;
    google.charts.load('current', {
      callback: function () {
        var chart = new google.visualization.LineChart(document.getElementById('chart'));

        var options = {'title' : 'Average Sentiment over time!',
          animation: {
            duration: 3000,
            easing: 'out',
            startup: true
          },
          hAxis: {
            title: 'Time'
          },
          vAxis: {
            title: 'Sentiment',
            //minValue: -1,
            //maxValue: 1
          },
          height: 400,
          width: 1000,
          legend: { position: 'bottom' }
        };

        var data = new google.visualization.DataTable();
        let trends = '#{query}';
        console.log('Trends web: ' + trends);
        $.ajax({
          url: '/stats?tags=' + encodeURIComponent(trends),
          dataType: 'json'
          }).done(function (results) {
            data.addColumn('datetime', 'Time');
            $.each(results, function (i, row) {
              data.addColumn('number', row.tag);
            });
          });


        var formatDate = new google.visualization.DateFormat({pattern: 'hh:mm:ss'});
        var formatNumber = new google.visualization.NumberFormat({pattern: '#,##0.0'});

        getData();
        setInterval(getData, 3000);
        function getData() {
          counter++;
          console.log(counter);
          if (counter < 10) {
            removeRow(0);
            console.log('Removed Row');
          }
          $.ajax({
            url: '/stats?tags=' + encodeURIComponent(trends),
            dataType: 'json'
            }).done(function (results) {
              drawChart(results);
            });
          }

        function drawChart(results) {
          let timeStamp = new Date();
          let magicdata = [timeStamp];
          $.each(results, function (i, row) {
              magicdata.push(row.sentiment)
              console.log(magicdata);
          });
          data.addRow(magicdata);
          formatDate.format(data, 0);
          chart.draw(data, options);
        }
      },
      packages:['corechart']
    });